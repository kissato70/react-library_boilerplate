{
  "name": "library",
  "version": "1.0.0",
  "description": "library project",
  "author": "kissato70",
  "license": "MIT",
  "repository": "kissato70/react-library_boilerplate",
  "main": "dist/library.js",
  "module": "dist/library.modern.js",
  "source": "src/lib.tsx",
  "engines": {
    "node": ">=10"
  },
  "workspaces": [
    "example"
  ],
  "scripts": {
    "start": "yarn && node ./.bin/init.js && yarn build && yarn predeploy && cd ..",
    "dist": "microbundle-crl --no-compress --format modern,cjs",
    "dev": "microbundle-crl watch --no-compress --format modern,cjs",
    "serve": "cd example && yarn serve",
    "predeploy": "cd example && yarn install && yarn run build && cd .."
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.6.1",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "microbundle-crl": "^0.13.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3",
    "typescript": "^4.3.5"
  },
  "files": [
    "dist"
  ]
}
